<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/imageView"
		android:scaleType="fitXY"
		android:background="#ffffffff" />

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_gravity="bottom">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/logo"
				android:scaleType="centerInside"
				android:layout_centerVertical="true" />
		</RelativeLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:layout_weight="1">

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/activity_login_login_edit_text"
				android:layout_gravity="center_horizontal"
				android:hint="@string/activity_login_edit_text_login"
				android:includeFontPadding="false"
				android:inputType="none" />

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="textPassword"
				android:ems="10"
				android:id="@+id/activity_login_password_edit_text"
				android:layout_gravity="center_horizontal"
				android:hint="@string/activity_login_password_edit_text" />

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/title_activity_login"
				android:id="@+id/activity_login_login_button"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="20dp" />
		</LinearLayout>
	</LinearLayout>

</RelativeLayout>